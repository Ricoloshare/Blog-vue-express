n  width: 100%;\r\n  height: auto;\r\n  margin-top: 20px;\r\n}\r\n.detail {\r\n  width: 80%;\r\n  min-height: 300px;\r\n  margin: 0 auto;\r\n  @include font_color();\r\n  @include bg_color();\r\n  padding: 10px;\r\n  position: relative;\r\n  .title {\r\n    margin-bottom: 10px;\r\n    ul {\r\n      width: 400px;\r\n      display: flex;\r\n      justify-content: space-between;\r\n      margin: 0 auto;\r\n      padding: 0;\r\n      li {\r\n        display: flex;\r\n        align-items: center;\r\n        p {\r\n          margin: 0;\r\n          margin-left: 5px;\r\n        }\r\n      }\r\n    }\r\n    h1 {\r\n      width: 100%;\r\n      text-align: center;\r\n      margin: 0;\r\n      padding: 0;\r\n      border: none;\r\n    }\r\n  }\r\n}\r\n.markdown-body {\r\n  box-sizing: border-box;\r\n  min-width: 200px;\r\n  max-width: 980px;\r\n  margin: 0 auto;\r\n  padding: 45px;\r\n  @include font_color();\r\n  font-size: 15px;\r\n  h2 {\r\n    border: none;\r\n  }\r\n}\r\n.markdown-body pre,\r\ncode {\r\n  @include bg_app_color();\r\n}\r\n@media (max-width: 767px) {\r\n  .markdown-body {\r\n    padding: 10px;\r\n  }\r\n  .detail .title ul{\r\n    display: block;\r\n  }\r\n  .detail{\r\n    width: 95%;\r\n  }\r\n}\r\n.reward {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  flex-direction: column;\r\n  padding-bottom: 10px;\r\n}\r\n.judge {\r\n  width: 100%;\r\n  position: absolute;\r\n  left: 0;\r\n  bottom: -20px;\r\n  padding-left: 10px;\r\n  @include font_color();\r\n  @include bg_color();\r\n}\r\n</style>\r\n"]}]}